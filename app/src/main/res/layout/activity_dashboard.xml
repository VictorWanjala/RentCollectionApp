<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/v3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".DashboardActivity">




    <androidx.cardview.widget.CardView
        android:id="@+id/PayDate"
        android:layout_width="350dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="180dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/ic_baseline_date_range_24"
                android:background="@drawable/date"
                android:padding="8dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Rent due date"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>


            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Your rent is due by 5th of every month"/>



        </LinearLayout>



    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Call"
        android:layout_width="150dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="8dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="180dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/ic_baseline_call_24"
                android:background="@drawable/call"
                android:padding="8dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="Contact"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>


            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Want to talk to the agent or landlord? Click me!"/>



        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.cardview.widget.CardView
            android:id="@+id/PayRent"
            android:layout_width="150dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="180dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">
                
                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/ic_baseline_attach_money_24"
                    android:background="@drawable/money"
                    android:padding="8dp"
                    android:layout_height="50dp"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Pay Rent"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>


                <View
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Click to pay your rent"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/RoomDetails"
            android:layout_width="150dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="180dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <ImageView
                    android:layout_width="50dp"
                    android:src="@drawable/ic_baseline_bedroom_parent_24"
                    android:background="@drawable/room"
                    android:padding="8dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="RoomDetails"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>


                <View
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="1st Floor, Room A1, 1Bedroom"/>



            </LinearLayout>



        </androidx.cardview.widget.CardView>




    </LinearLayout>









</LinearLayout>

